<section class="">
  <div class="container d-flex justify-content-center">
    <div class="row w-75 mt-5">
      <div class="col-md-12">
        <h2 class="text-center">Edit Product</h2>
        <form action="/admin/edit_product?edit=<%=editproduct._id %>" method="POST" enctype="multipart/form-data">
          <label for="">Prodcut Name</label>
          <input type="text" name="name" class="form-control" value="<%=editproduct.Productname%>" />
          <label for="">Description</label>
          <input type="text" name="description" class="form-control" value="<%=editproduct.ProductDescription%>" />

          <label for="">Price</label>
          <input type="text" name="price" class="form-control" value="<%=editproduct.Price%>" />

          
          <label for="cars">Category</label>
         
          <select class="form-select" name="category" id="cars"onchange="subCategory(this.value)">
            <% procategory.forEach(function(procategory) { %>
              <option value="<%=procategory.categoryName%>"> <%=procategory.categoryName%> </option>
            <% } )%>
          </select>
          <label for="cars">Sub Category</label>
         
          <select class="form-select" name="subcategory" id="selectbox" >
           
          
       
          </select>
        
          <label for="">Quantity</label>
          <input type="text" name="quantity" class="form-control" value="<%=editproduct.Quantity%>" />

          <label for="">Image</label>
          <img src="/uploads/<%=editproduct?.Image[0]%>" alt="" style="width:100px;height:auto ">
          
          <input type="file" name="file2" class="form-control" />

          <button type="submit" class="btn btn-success mt-4">Submit</button>
        </form>
      </div>
    </div>
  </div>
</section>
<script>

  function subCategory(categoryName){
    console.log("jjjjjjj");
    console.log(categoryName);
    $.ajax({
    
   url:"/admin/find_subcategory?categoryName="+categoryName,
   method:'GET',
  success:(sub)=>{
    console.log(sub);
    var data = sub;
          var html = "";
          for (var i = 0; i < data.length; i++) {
              html += "<option value='" + data[i].subcategoryName + "'>" + data[i].subcategoryName + "</option>";
          }
          $('#selectbox').html(html);
  
  }
  })
  
  
  }
  
  
  
  
  </script>